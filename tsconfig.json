{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@assets/*": [
        "src/assets/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@constants/*": [
        "src/constants/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@stories/*": [
        "src/stories/*"
      ]
    }
  },
  "include": [
    "src",
    "src/stories/.storybook"
  ]
}